@charset "UTF-8";
/**
	project_discover.jsp
	한지은
**/
	div.scroll-card img#product_img{
  		width: 245px;
    	height: 180px;
  	}
  	div.scroll-card>a{
  		text-decoration: none !important;
  	}
 	div.scroll-card{
		width: 242px;
	    height: 315px;
	    border: 1px solid rgba(10,10,10,0.1);
	    overflow: hidden;
	    transition: box-shadow .3s;
	    margin: 10px;
	    display:inline-block !important;
	    position:inherit !important;
	    top:0px !important;
	}
	div.scroll-card:hover {
  		box-shadow: 0 0 11px rgba(33,33,33,.2); 
	}
	div.grid{
		left:10px;
		height:inherit !important;
	}
	section#project_sort_content{
	 	width:1080px; 
	 	margin:auto; 
	 	padding: 20px 0px 40px 0px;
	 	height:auto;
	}
	section#project_sort_top{
		border-bottom:1px solid rgba(10,10,10,0.1);
		height:54px;
	}
	span#project_count_point{
		color:#1e90ff;
		padding-left:23px;
	}
	div#project_sort_bar{
		width: 1080px;
		margin:auto;
		padding-top:12px;
		padding-left:20px;
	}
	div#project_sort_bar button,
	section#project_sort_content button,
	div#project_sort_bar span{
		border:1px solid rgba(10,10,10,0.1);
		background-color: white;
		color:#555555;
		padding: 3px 7px;
		margin-right:5px;
		font-size: 15px;
	}
	div#project_sort_bar span{
		border-radius:5px;
		vertical-align: middle;
		height:30px;
		overflow: hidden;
	}
	section#project_sort_content button {
		border: none;
	}
	.btn-primary:not(:disabled):not(.disabled).active:focus, 
	.btn-primary:not(:disabled):not(.disabled):active:focus, 
	.show>.btn-primary.dropdown-toggle:focus,
	.btn-primary.focus, .btn-primary:focus{
		box-shadow: none !important;
	}
	section#project_sort_content>div:first-child {
		margin-bottom:20px;
	}
	button#sort_editor,
	button#sort_reset{
		border: 1px solid rgba(10,10,10,0.1);
	    background-color: white;
	    color: #555555;
	    padding: 3px 7px;
	    margin-right: 5px;
	    font-size: 15px;
	    border-radius: 5px;
	    text-align: center;
   		vertical-align: middle;
   		outline: none;
	}
	button#sort_reset {
		float:right;
		position: relative;
    	right: 17px;
	}
	a.dropdown-item {
    display: block;
    width: 100%;
    padding:4px 10px;
    clear: both;
    font-weight: 400;
    color: #212529;
    text-align: inherit;
    white-space: nowrap;
    background-color: white;
    border: none !important;
    outline: none;
    }
    a.dropdown-item:focus, 
    a.dropdown-item:hover {
    color: #16181b !important;
    text-decoration: none;
    background-color: #f8f9fa !important;
    outline: none;
	}
	.dropdown-menu{
	    cursor: pointer;
	}
	div#project_sort_bar>div{
		display: inline-block;
	}
	div#project_sort_bar div.dropdown-menu>a:first-child {
		color:#1e90ff !important;
		font-weight: bold;
	}
	div#project_sort_bar div.dropdown-menu {
		margin-top:11px;
	}
	section#project_sort_content>div:first-child>div{
		display: inline-block;
	    float:right;
	    margin-top:-2px;
	  	padding-right: 10px;
	}
	section#project_sort_content>div:first-child>div button,
	section#project_sort_content>div:first-child>div a {
		font-weight: bold;
	}
	section#project_sort_content div.dropdown-menu {
		margin-left: -30px;
   		min-width: 60px;
	}   
	section#project_sort_content>div:first-child>div a {
		font-size: 14px;
		font-weight: normal;
	}
	div#project_sort_bar span>span{
		border: none !important;
	    outline: none;
	    background-color: transparent;
	    vertical-align: baseline;
	    font-weight:normal;
	    margin-right:0px;	margin-left:0px;
	    color:black;
	    padding-left:0px;	 padding-right:0px;
	}
	div#project_sort_bar span{
		font-weight:bold;
		cursor: pointer;
		color:#1e90ff;
		background-color: #F2F2F2;
	}
	button#sort_editor_none{
		border-radius: 5px;
		cursor: pointer;
	    background-color: #F2F2F2 !important;
	    position:relative;
	    top:2px;
	}
	button#sort_editor_none b{
		color: #1e90ff;
	}
	button#sort_reset i{
		color: #1e90ff;
		padding-right:5px;
	}
	div.infinite-scroll-error{
		text-align: center;
		min-height:300px;
		margin:160px 0px;
		font-size: 20pt;
    	color: #dddcdc;
    	font-weight: bold;
	}
	div.infinite-scroll-error i#error_icon {
	    font-size:70pt;
	    margin:auto;
	    margin-bottom:20px;
	}
	
