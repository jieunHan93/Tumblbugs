		param.put("pj_id", pj_id);
		param.put("pj_colname", pj_colname);
		param.put("pj_val", pj_val);
		
		int val = sqlSession.update(namespace+".update_editor", param);
		
		if( val != 0) result = true;
		
		return result;
	}
	
