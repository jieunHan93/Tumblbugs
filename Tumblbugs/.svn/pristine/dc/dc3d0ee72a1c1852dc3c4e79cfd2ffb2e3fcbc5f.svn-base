	function auto_hypen(num) {
		num = num.replace(/[^0-9]/g, '');
		var tmp = "";

		if (num.length > 3 && num.length <= 7) {
			tmp += num.substr(0, 3);
			tmp += '-';
			tmp += num.substr(3);
			num = tmp;
		} else if (num.length > 7) {
			tmp += num.substr(0, 3);
			tmp += '-';
			tmp += num.substr(3, 4);
			tmp += '-';
			tmp += num.substr(7);
			num = tmp;
		}
		$("#m4_c2_i1").val(num);
