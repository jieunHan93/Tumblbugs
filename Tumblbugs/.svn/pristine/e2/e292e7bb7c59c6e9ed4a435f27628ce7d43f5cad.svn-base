<script>
$(document).ready(function(){
	$('#cardfrom').hide();
	$('#bankaccountfrom').hide();  
	$('#addbankaccount').hide();
	$('#dateofbirth').show();
	$('#birthtextfield').show();	  
	$('#buisnessname').hide();
	$('#buisnessfield').hide();	
	$("input:radio[name='radio']:radio[value='1']").prop('checked', true);
	
	$("#cardfrominfo").change(function(){		
		
		if($("#cardfrominfo option:selected").val() == "card"){
			$('#addcard').show();
			$('#cardfrom').hide();
			
			$('#addbankaccount').hide();
			$('#bankaccountfrom').hide();  
			
		}else if($("#cardfrominfo option:selected").val() == "moneyaccount"){
			$('#addcard').hide();
			$('#cardfrom').hide();
			
			$('#addbankaccount').show();
			$('#bankaccountfrom').hide();
		}
	
	});
	
	
	  $("#addcard").click(function(){
		 
			if($("#cardfrominfo option:selected").val() == "card"){
				$("#cardfrom").toggle(500);
				$('#bankaccountfrom').hide(); 
				
	    	}else{
	    		alert("결제 수단을 선택해주세요.")	
	    	}
	    	
	  });
	  
	  $("#addbankaccount").click(function(){
		  if($("#cardfrominfo option:selected").val() == "moneyaccount"){
			  $('#cardfrom').hide();
			  $("#bankaccountfrom").toggle(500); 
				
	    	}else{
	    		alert("결제 수단을 선택해주세요.")	
	    	}
	    	
	  });
	  
	  
		  $(".radio").click(function(){
			  var Val = $('input[name="radio"]:checked').val();
	          if(Val == "1"){
	        	  $('#dateofbirth').show();
	        	  $('#birthtextfield').show();
	        	  
	        	  $('#buisnessname').hide();
	        	  $('#buisnessfield').hide();
	          }else if(Val == "2"){
	        	  $('#dateofbirth').hide();
	        	  $('#birthtextfield').hide();
	        	  
	        	  $('#buisnessname').show();
	        	  $('#buisnessfield').show();
	          }

		  }); 
	});
	
</script>
